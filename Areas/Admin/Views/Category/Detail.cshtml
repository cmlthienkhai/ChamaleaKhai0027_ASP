@model ChamaleaKhai0027.Context.Category

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Detail</title>
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
</head>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        @Html.Partial("~/Areas/Admin/Views/Home/Header.cshtml")
        @Html.Partial("~/Areas/Admin/Views/Home/Sidebar.cshtml")

        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <h2> Detail</h2>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        <p class="form-control-static">@Model.Name</p>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ImageUrl)
                        <p class="form-control-static">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="~/images/cate/@Model.ImageUrl" alt="Category Image" width="200" height="200" class="img-thumbnail" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </p>
                    </div>

                    <div class="form-group">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </section>
            @Html.Partial("~/Areas/Admin/Views/Home/Footer.cshtml")
        </div>
        <script src="~/plugins/jquery/jquery.min.js"></script>
        <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/dist/js/adminlte.min.js"></script>
    </div>
</body>
</html>
