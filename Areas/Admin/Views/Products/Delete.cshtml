@model ChamaleaKhai0027.Context.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
</head>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        @Html.Partial("~/Areas/Admin/Views/Home/Header.cshtml")
        @Html.Partial("~/Areas/Admin/Views/Home/Sidebar.cshtml")

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <h2>Delete Product</h2>

                    <div class="form-group">
                        <label>ID</label>
                        <p>@Model.Id</p>
                    </div>

                    <div class="form-group">
                        <label>Name</label>
                        <p>@Model.Name</p>
                    </div>

                    <div class="form-group">
                        <label>Price</label>
                        <p>@Model.Price.ToString("C")</p>
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <p>@Model.Description</p>
                    </div>

                    <div class="form-group">
                        <label>Category</label>
                        <p>@(Model.Category != null ? Model.Category.Name : "No Category")</p>
                    </div>

                    <div class="form-group">
                        <label>Brand</label>
                        <p>@(Model.Brand != null ? Model.Brand.BrandName : "No Brand")</p>
                    </div>

                    <div class="form-group">
                        <label>Product Image</label>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Url.Content("~/images/pro/" + Model.ImageUrl)" alt="Product Image" width="150" height="150" class="img-thumbnail" />
                        }
                        else
                        {
                            <p>No Image</p>
                        }
                    </div>

                    <p>Are you sure you want to delete this product?</p>

                    @using (Html.BeginForm("Delete", "Products", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">Cancel</a>
                    }
                </div>
            </section>
            <!-- /.content -->

            @Html.Partial("~/Areas/Admin/Views/Home/Footer.cshtml")
        </div>
        <!-- ./content-wrapper -->
        <!-- REQUIRED SCRIPTS -->
        <script src="~/plugins/jquery/jquery.min.js"></script>
        <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/dist/js/adminlte.min.js"></script>
    </div>
    <!-- ./wrapper -->
</body>
</html>
