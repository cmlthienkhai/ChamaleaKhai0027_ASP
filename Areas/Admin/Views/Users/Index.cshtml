@model IEnumerable<ChamaleaKhai0027.Context.User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
</head>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        @Html.Partial("~/Areas/Admin/Views/Home/Header.cshtml")
        @Html.Partial("~/Areas/Admin/Views/Home/Sidebar.cshtml")

        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <h2>User</h2>
                    <p>
                        @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })
                    </p>
                    <table class="table table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Image</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.ImageUrl))
                                        {
                                            <img src="@Url.Content("~/images/user/" + user.ImageUrl)" alt="@user.FirstName" style="width: 100px; height: auto;" />
                                        }
                                        else
                                        {
                                            <img src="@Url.Content("~/images/user/default.png")" alt="No Image" style="width: 100px; height: auto;" />
                                        }
                                    </td>
                                    <td>@(user.IsAdmin ? "Admin" : "User")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-sm btn-warning", @style = "margin-right: 2px;" })
                                            @Html.ActionLink("Details", "Details", new { id = user.Id }, new { @class = "btn btn-sm btn-info", @style = "margin-right: 2px;" })
                                            @Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @class = "btn btn-sm btn-danger" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>

            @Html.Partial("~/Areas/Admin/Views/Home/Footer.cshtml")
        </div>
    </div>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
</body>
</html>
