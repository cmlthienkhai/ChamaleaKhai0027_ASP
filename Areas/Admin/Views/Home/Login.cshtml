@model ChamaleaKhai0027.Context.User

@{
    ViewBag.Title = "Đăng Nhập";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <style>
        /* Cài đặt hình nền */
        body {
            background: url('https://www.mancity.com/meta/media/xvkf21ur/champions-stats-wide.jpg') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            height: 100vh; /* Chiếm toàn bộ chiều cao viewport */
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff; /* Màu chữ để phù hợp với hình nền tối */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Cài đặt kiểu cho khung đăng nhập */
        .card {
            background-color: rgba(255, 255, 255, 0.9); /* Nền trắng với độ trong suốt */
            border-radius: 10px; /* Bo góc card */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Đổ bóng cho card */
            padding: 20px; /* Khoảng cách bên trong card */
            max-width: 520px; /* Chiều rộng tối đa của card */
            width: 100%; /* Chiếm toàn bộ chiều rộng có thể có */
        }

        .card-title {
            color: #333; /* Màu chữ tiêu đề */
            font-size: 1.5rem;
        }

        .text-danger {
            color: #d9534f; /* Màu chữ thông báo lỗi */
        }

        .form-horizontal {
            display: flex;
            flex-direction: column;
        }

        .form-group {
            margin-bottom: 1rem;
            display: flex;
        }

            .form-group label {
                color: #000; /* Màu chữ cho label */
            }

        .form-control {
            color: #000; /* Màu chữ cho input */
            background-color: #fff; /* Nền trắng cho input */
            border-radius: 5px; /* Bo góc cho input */
            border: 1px solid #ccc; /* Viền của input */
            width: 100%; /* Chiều rộng 100% để chiếm toàn bộ chiều rộng có sẵn */
            padding: 0.5rem; /* Khoảng cách bên trong input */
            box-sizing: border-box; /* Đảm bảo chiều rộng bao gồm padding và border */
        }

        .btn {
            width: 100%; /* Đặt chiều rộng của nút submit */
        }

        .text-center {
            text-align: center; /* Căn giữa chữ trong các phần tử */
        }
        .card-title {
            color: #333; /* Màu chữ tiêu đề */
            font-size: 1.5rem;
            line-height: 1.2; /* Căn chỉnh khoảng cách giữa các dòng */
            margin-top: 1rem;
        }

            .card-title .sign {
                display: block;
                font-size: 2rem; /* Kích thước chữ cho phần "Sign" */
                font-weight: bold;
            }

            .card-title .in {
                display: block;
                font-size: 1.5rem; /* Kích thước chữ cho phần "in" */
                font-weight: bold;
            }
    </style>
</head>

<body>
    <div class="container">
        <section class="section-content padding-y">
            <div class="container">
                <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
                    <article class="card-body">
                        <header class="mb-4 text-center">
                            <h4 class="card-title">
                                <span class="sign">Sign</span><br>
                                <span class="in">in</span>
                            </h4>
                        </header>

                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <!-- Email -->
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Password -->
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                                    <div class="col-md-8">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!-- Submit Button -->
                                <div class="form-group row mb-0">
                                    <div class="col-md-8 offset-md-4">
                                        <button type="submit" class="btn btn-primary">
                                            Login
                                        </button>
                                    </div>
                                </div>

                                <!-- Display Success/Error Message -->
                                @if (ViewBag.Message != null)
                                {
                                    <div class="form-group row">
                                        <div class="col-md-8 offset-md-4">
                                            <p class="text-danger">@ViewBag.Message</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        <div class="text-center mt-4 text-dark">
                            Don't have an account? <a href="@Url.Action("Register", "Home")">Sign up</a>
                        </div>
                    </article><!-- card-body.// -->
                </div> <!-- card .// -->
            </div> <!-- container.// -->
        </section>
    </div>

    <!-- Thêm các liên kết JS khác ở đây nếu cần -->
</body>
</html>
